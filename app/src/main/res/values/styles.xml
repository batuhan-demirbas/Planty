<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FabShapeOverlay" parent="ShapeAppearance.MaterialComponents.SmallComponent">

        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">rounded</item>

    </style>

    <style name="ImageBackgroundShapeOverlay" parent="ShapeAppearanceOverlay.Material3.Corner.Top">

        <item name="cornerSize">20dp</item>
        <item name="cornerFamily">rounded</item>

    </style>

    <style name="CornerCut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>


    </style>

    <style name="Theme.Planty.IconButton" parent="Widget.Material3.Button.TextButton">

        <item name="android:minWidth">@dimen/m3_btn_icon_only_min_width</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/primary_100</item>
        <item name="iconPadding">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Button.IconButton</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>

    </style>

    <style name="Theme.Planty.IconButton.Filled" parent="Widget.Material3.Button.IconButton.Filled">

        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="iconTint">@color/primary_400</item>
        <item name="iconSize">24dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="backgroundTint">@color/primary_100</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="Theme.Planty.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body.Large</item>
    </style>

</resources>